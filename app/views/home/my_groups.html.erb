<center />
<div id="my_groups">
  <% @my_groups_class = "current" %>
  <%= form_tag do %>
    <table>
      <tr>
        <th>No</th>
        <th style="text-align: left">Group Name</th>
      </tr>
      <% count = 0 %>
      <%- @groups.each do |group| %>
        <tr>
          <td><%= count += 1 %></td>
          <td style="text-align: left"><%= group.name %></td>
        </tr>
      <%- end %>
    </table>
  <% end %>
</div>