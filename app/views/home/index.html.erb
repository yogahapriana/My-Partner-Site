<div class="home">
  <h1>Site Name</h1>
  <hr class="line" />
<%= form_tag root_path do %>
  <%= text_field_tag :keyword %> :
  <%= submit_tag "Search" %>
<% end %>

  <hr class="line" />
  <% if @groups.count==0 %>
    <%= @result %>
  <% else %>
    <%= "Results of group with keyword \"#{@keyword}\" : " %><br />
    <% count=0 %>
    <center />
    <table>
    <% @groups.each do |g| %>
      <tr>
        <% count = count + 1 %>
        <% @group_name = g.name %>
        <td><%= count.to_s %></td>
        <td>.</td>
        <td style="text-align: left;"><%= link_to "#{@group_name}", "/choose_recipients/#{g.id}" %></td>
      </tr>
    <% end %>
    </table>
  <% end %>
  <hr class="line" />
  <p>Company Name</p>
</div>
