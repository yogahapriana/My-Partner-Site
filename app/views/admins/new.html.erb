<% if current_user.is_admin %>
<% @create_user_class = "current" %>
  <div id="new_user">
    <%= form_for :user, :url => create_user_path,  do |f| %>
      <center />
      <h1>Creating User</h1>
      <table>
        <tr>
          <td>
            <%= f.label :username %><br />
            <%= f.text_field :username, :class => "input" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :email %><br />
            <%= f.text_field :email, :class => "input" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :password %><br />
            <%= f.password_field :password, :class => "input" %>
          </td>
        </tr>
        <tr>
          <td colspan="3" style="text-align: right"><%= f.submit "Create", :class => "button-primary" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
<% end %>