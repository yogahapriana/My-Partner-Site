<h1>All Users</h1>
<p><%= link_to "Create new User", new_path %></p>
<hr width="35%" />
<table>
  <tr>
    <th>No</th>
    <th colspan="3" style="text-align: center;">Username</th>
  </tr>
    <% count = 0 %>
    <%-@users.each do |user|%>
    <tr>
      <td><%= count += 1 %> </td>
      <td><%= user.username %></td>
      <td><%= link_to 'Edit',edit_user_path(user.id) %></td>
      <td><%= link_to 'Delete',delete_user_path(user.id),confirm: 'Are you sure?',method: :delete %></td>
    <%end%>
    </td>
  </tr>
</table>
