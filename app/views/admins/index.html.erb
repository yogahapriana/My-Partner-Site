<% if current_user.is_admin %>
  <div id="list_users">
    <center />
    <%= form_tag do %>
      <h1>All Users</h1>
      <p style="font-size: 15px"><%= link_to "Create new User", new_path %></p>
      <table>
        <tr>
          <th>No</th>
          <th colspan="3" style="text-align: left;">Username</th>
        </tr>
        <% count = 0 %>
        <%-@users.each do |user|%>
          <tr>
            <td><%= count += 1 %> </td>
            <td><%= user.username %></td>
            <td><%= link_to 'Edit',edit_user_path(user.id) %></td>
            <td><%= link_to 'Delete',delete_user_path(user.id),confirm: 'Are you sure?',method: :delete %></td>
          <%end%>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
<% end %>