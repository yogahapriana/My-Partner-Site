<div class="message">
  <h1><%= current_user.username %> - ( <%= @message.count %> Email Sended ) </h1>
  <hr class="line" />
  <center>
    <table>
      <tr>
        <th>No</th>
        <th>Subject</th>
        <th>Recipients</th>
        <th>Replies</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
      <% count = 0 %>
      <% @message.each do |message| %>
        <% @recipient = message.recipients   %>
        <tr>
          <td><%= count += 1 %></td>
          <td><%= link_to "#{message.subject}", "/reply/#{message.id}" %> </td>
          <td>( <%= @recipient.count %>  person )</td>
          <td><%= Reply.where(:message_id => message.id).count %></td>
          <td><%= message.created_at.strftime("%a, %d %b %Y") %></td>
          <td><%= message.created_at.strftime("%I:%M %p") %></td>
        </tr>
      <% end %>
    </table>
  </center>
  <hr class="line" />
  <p>Company Name</p>
</div>