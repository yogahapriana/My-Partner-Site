<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

  <head>
    <title><%= @title %></title>
    <!-- ////////////////////////////////// -->
    <!-- //      Start Stylesheets       // -->
    <!-- ////////////////////////////////// -->

    <%= stylesheet_link_tag ("inner") %>
    <%= stylesheet_link_tag ("fancy") %>
    <%= csrf_meta_tags %>

    <!-- ////////////////////////////////// -->
    <!-- //        Start Scripts         // -->
    <!-- ////////////////////////////////// -->

    <%= javascript_include_tag :defaults %>

  </head>
  <body>
    <div id="centerColumn">
      <% if user_signed_in? %>
  <%# if current_user.sign_in_count == 1 %>
  <%#= "Welcome in your first fisit, " %>
  <%# else %>
  <%#= "Welcome back, " %>
  <%# end %>
  <%#= current_user.username %>
  <%#= ". Not you?"  %>
        <div id="header">
          <%= link_to image_tag("rss_icon.png"), "#" %>
        </div>
        <!--//end #header//-->
        <div id="InfoPanel2">
          <div id="InfoPanel_left"><br />
            <%= @header_name %>
          </div>
          <!--//end #InfoPanel_left//-->
        </div>
        <!--//end #InfoPanel//-->
        <div id="navbar">
          <div id="topnav">
            <ul>
              <li><%= link_to "Home", root_path(:keyword => "") %></li>
              <li class="c1"><%= image_tag("menu_dividers.jpg", :align => 'center') %></li>
              <li><%= link_to "Inbox", inbox_path %></li>
              <li class="c1"><%= image_tag("menu_dividers.jpg", :align => 'center') %></li>
              <li><%= link_to "Sent Message", sent_message_path %></li>
              <li class="c1"><%= image_tag("menu_dividers.jpg", :align => 'center') %></li>
              <li><%= link_to "My Groups", my_groups_path %></li>
              <li class="c1"><%= image_tag("menu_dividers.jpg", :align => 'center') %></li>
              <li><%= link_to "Group List", group_list_path %></li>
              <li class="c1"><%= image_tag("menu_dividers.jpg", :align => 'center') %></li>
              <li><%= link_to "Sign out", destroy_user_session_path %></li>
            </ul>
          </div>
          <!--//end #topnav//-->
        </div>
        <!--//end #navbar//-->

        <div id="nav_shadow"></div>
        <!--//end #nav_shadow//-->
      <% else %>
        <div id="header">
          <%= link_to image_tag("rss_icon.png"), "#" %>
        </div>
        <!--//end #header//-->
        <div id="InfoPanel2">
          <div id="InfoPanel_left"><br />
            <%= @header_name %>
          </div>
          <!--//end #InfoPanel_left//-->
        </div>
        <!--//end #InfoPanel//-->
        <div id="navbar">
          <div id="topnav">
            <ul>
              <li><%= link_to "Sign in", new_user_session_path, :class => @class_active_sign_in %></li>
              <li class="c1"><%= image_tag("menu_dividers.jpg", :align => 'center') %></li>
              <li><%= link_to "Sign up", new_user_registration_path, :class => @class_active_sign_up %></li>
            </ul>
          </div>
          <!--//end #topnav//-->
        </div>
        <!--//end #navbar//-->

      <% end %>
    </div>
    <!--//end #centerColumn//-->
    <%= yield %>
    <% if user_signed_in? %>
      <div id="footer">
        <div id="footer_content">
          <div id="content_left2">
            <div id="bottomnav">
              <ul>
                <li><%= link_to "Home", root_path %> |</li>
                <li><%= link_to "Inbox", inbox_path %> |</li>
                <li><%= link_to "Sent Message", sent_message_path %> |</li>
                <li><%= link_to "My Groups", my_groups_path %> |</li>
                <li><%= link_to "Group List", group_list_path %> |</li>
                <li><%= link_to "Sign out", destroy_user_session_path %></li>
              </ul>
            </div>
            <!--//end #bottomnav//-->
            <br />
            <br />
            <div class="copyright">Copyright 2011 Your Company <a href="#">Name</a> | <a href="#">Terms of Use</a></div>
          </div>
          <!--//end #content_left2//-->
          <!--//end #content_right3//-->
        </div>
        <!--//end #footer_content//-->
      </div>
      <!--//end #footer//-->
      <div class="user_nav"></div>
    <% else %>
      <div id="footer">
        <div id="footer_content">
          <div id="content_left2">
            <div id="bottomnav">
              <ul>
                <li><%= link_to "Sign in", new_user_session_path, :class => @class_active_sign_in %> |</li>
                <li><%= link_to "Sign up", new_user_registration_path, :class => @class_active_sign_up %></li>
              </ul>
            </div>
            <!--//end #bottomnav//-->
            <br />
            <br />
            <div class="copyright">Copyright 2011 Your Company <a href="#">Name</a> | <a href="#">Terms of Use</a></div>
          </div>
          <!--//end #content_left2//-->
          <!--//end #content_right3//-->
        </div>
        <!--//end #footer_content//-->
      </div>
      <!--//end #footer//-->
      <div class="user_nav"></div>
    <% end %>
  </body>
</html>